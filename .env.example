# Application
PORT=3001
API_PREFIX=api
BACKEND_URL=http://localhost:3001

# Database
DATABASE_URL=postgresql://user:pass@localhost:5432/onebyonepics

# JWT
JWT_SECRET=your-secret-key-min-32-chars
JWT_REFRESH_SECRET=your-refresh-secret-min-32-chars
JWT_EXPIRES_IN=900s
JWT_REFRESH_EXPIRES_IN=7d

# Google GenAI
GOOGLE_API_KEY=your-google-api-key
GOOGLE_GENAI_PRIMARY_MODEL=gemini-3-pro-image-preview
GOOGLE_GENAI_FALLBACK_MODEL=gemini-2.5-flash-image

# Rate Limiting (optional - defaults shown)
# RATE_LIMIT_PRIMARY_RPM=20
# RATE_LIMIT_PRIMARY_TPM=100000
# RATE_LIMIT_PRIMARY_RPD=250
# RATE_LIMIT_FALLBACK_RPM=500
# RATE_LIMIT_FALLBACK_TPM=500000
# RATE_LIMIT_FALLBACK_RPD=2000
# GENERATION_WORKER_CONCURRENCY=5
# COMPOSITION_CONCURRENCY=4

# DigitalOcean Spaces
DO_SPACES_KEY=your-key
DO_SPACES_SECRET=your-secret
DO_SPACES_REGION=sgp1
DO_SPACES_BUCKET=onebyonepics
DO_SPACES_CDN_ENDPOINT=https://onebyonepics.sgp1.cdn.digitaloceanspaces.com

# CORS
CORS_ORIGIN=http://localhost:5173

# Redis (required for rate limiting and job queues)
REDIS_URL=redis://localhost:6379

# Cleanup
CLEANUP_ORIGINAL_IMAGES_HOURS=24
CLEANUP_GENERATED_IMAGES_DAYS=7

# Maya
MAYA_SANDBOX=true
MAYA_PUBLIC_KEY=
MAYA_SECRET_KEY=
MAYA_WEBHOOK_SECRET_KEY=
# Optional override for webhook IP allowlist (comma-separated)
# MAYA_WEBHOOK_ALLOWED_IPS=18.138.50.235,3.1.207.200

# BetterAuth
BETTER_AUTH_SECRET=your-better-auth-secret-min-32-chars
FRONTEND_URL=http://localhost:5173

# Google OAuth (for BetterAuth social login)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
