{
  "name": "onebyonepics-backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "bun run src/index.ts",
    "start:dev": "bun run schema:validate && bun --watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "lint": "oxlint .",
    "migrate": "bun run scripts/migrate.ts",
    "migrate:up": "bun run scripts/migrate.ts up",
    "migrate:down": "bun run scripts/migrate.ts down",
    "migrate:status": "bun run scripts/migrate.ts status",
    "schema:validate": "bun run scripts/validate-schema.ts",
    "seed:admin": "bun run scripts/seed-admin.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.686.0",
    "@aws-sdk/s3-request-presigner": "^3.686.0",
    "@elysiajs/cors": "^1.0.0",
    "@elysiajs/swagger": "^1.0.0",
    "@google/genai": "^1.0.0",
    "@sinclair/typebox": "^0.34.41",
    "archiver": "^7.0.1",
    "bcrypt": "^5.1.1",
    "better-auth": "^1.4.7",
    "bun": "^1.3.4",
    "elysia": "^1.0.0",
    "pg": "^8.16.3",
    "sharp": "^0.33.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/bun": "latest",
    "@types/archiver": "^6.0.2",
    "@types/node": "^22.10.1",
    "@types/pg": "^8.16.0",
    "oxlint": "^1.0.0",
    "typescript": "^5.6.3"
  }
}
